                        </Grid.RowDefinitions>
                        <Slider x:Name="SliderZoom" Minimum="1"
                    Maximum="20"
                    Value="{Binding ZoomLevel, ElementName=map2, Mode=TwoWay}"
                    />
                        <maps:Map x:Name="map2" Grid.Row="1"
