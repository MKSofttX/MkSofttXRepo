                </phone:PanoramaItem>
                <phone:PanoramaItem x:Name="CentrosReciclaje" 
					Header="Centros de Reciclaje"
					HeaderTemplate="{StaticResource MyHeaderTemplate}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
